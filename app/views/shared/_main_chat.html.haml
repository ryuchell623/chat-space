.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__group-name
        = @group.name
      .main-header__left-box__member-list 
        Memberï¼š
        .main-header__left-box__member-list__name 
          - @group.group_users.each do |group_user|
            = group_user.user.name
    = link_to edit_group_path(@group), class:"edit-btn" do
      .main-header__edit-btn Edit
      
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "input-box__text", placeholder: "type a message"
      .input-box
        = f.label :image, class: "input-box__image" do
          = icon('fas', 'image')
          =f.file_field :file, class: "input-box__image__file"
      = f.submit "submit", class: "submit-btn"